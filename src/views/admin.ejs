<html>
  <body>
<%- include('partials/_header'); -%>
	<link rel="stylesheet" href="https://purple-silver-helicona.glitch.me/style.css">

  	<div class="loader-wrapper">
      	<span class="loader"><span class="loader-inner"></span></span>
  	</div>  



    <div class="container" style="min-height: 78vh; text-align: center;">
      <div class="row row-cols-1 row-cols-md-2" style="margin-top: 100px;">
        
      
      
        
          
      </div>
            <div class="row">
      <div class="col-xl-3 col-sm-6 col-12">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <div class="media d-flex">
                <div class="media-body text-left">
                  <style>
                    .new {
                      color: gray;
                    }
                  </style>
                  <h3 class="danger"><%= code.filter(x => (Date.now() - x.date) <= 1000 * 60 * 60 * 24).length %></h3>
                  <span class="new">24 saat içinde paylaşılan kod sayısı</span>
                </div>
                <div class="align-self-center">
                  <i class="icon-rocket danger primary font-large-2 mr-2 float-right"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
          <div class="col-xl-3 col-sm-6 col-12">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <div class="media d-flex">
                <div class="media-body text-left">
                  <style>
                    .new {
                      color: gray;
                    }
                  </style>
                  <h3 class="danger"><%= code.filter(x => (Date.now() - x.date) <= 1000 * 60 * 60 * 24 * 7).length %></h3>
                  <span class="new">7 gün içinde paylaşılan kod sayısı</span>
                </div>
                <div class="align-self-center">
                  <i class="icon-rocket danger primary font-large-2 mr-2 float-right"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
          <div class="col-xl-3 col-sm-6 col-12">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <div class="media d-flex">
                <div class="media-body text-left">
                  <style>
                    .new {
                      color: gray;
                    }
                  </style>
                  <h3 class="danger"><%= code.filter(x => (Date.now() - x.date) <= 1000 * 60 * 60 * 24 * 30).length %></h3>
                  <span class="new">30 gün içinde paylaşılan kod sayısı</span>
                </div>
                <div class="align-self-center">
                  <i class="icon-rocket danger primary font-large-2 mr-2 float-right"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
           <div class="col-xl-3 col-sm-6 col-12">
        <div class="card">
          <div class="card-content">
            <div class="card-body">
              <div class="media d-flex">
                <div class="media-body text-left">
                  <style>
                    .new {
                      color: gray;
                    }
                  </style>
                  <h3 class="danger"><%= code.filter(x => (Date.now() - x.date) <= 1000 * 60 * 60 * 24 * 365).length %></h3>
                  <span class="new">365 gün içinde paylaşılan kod sayısı</span>
                </div>
                <div class="align-self-center">
                  <i class="icon-rocket danger primary font-large-2 mr-2 float-right"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
              
              
      <table class="table table-hover table-dark" style="margin-top: 40px;">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">İsim</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Paylaşan</th>
            <th scope="col">Sil</th>
            <th scope="col">Sayfa</th>
            

          </tr>
        </thead>
        <tbody>
          <% code.forEach((x, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= x.name %></td>
            <td><%= x.desc %></td>
            <td><a href="/profile/<%= x.sharers[0] %>" class="btn btn-outline-primary">Profil (<%= x.sharers[0] %>) </a></td>
            <td><a href="/delete/<%= x.rank %>/<%= x.id %>" class="btn btn-outline-danger">Kodu sil</a></td>
            <td><a href="/<%= x.rank %>/<%= x.id %>" class="btn btn-outline-info">Koda bak</a></td>
  
            

          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

        
        
        
        
    <script>
      if (localStorage.getItem("mode") != "") {
        document.body.classList.add(localStorage.getItem("mode"));
        document.getElementById("mode-btn").checked = true;
      }
    </script>
        	<script>
  	// PRELOADER EFFECT
    	$(window).on("load",function(){
     	$(".loader-wrapper").fadeOut("slow");
    	});
  	</script>
  	<script>
  		// ANIMATE ON SCROLL
  		AOS.init();
	</script>
    <script src="/index.js"></script>
    <%- include('partials/_footer'); -%>
  </body>
</html>