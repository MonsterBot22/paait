     closeOnConfirm: false,
     text: urlParams.get('message'),
     footer: 'Copyright 2022 https://psychopath-techonology.ml/ - Bütün hakları saklıdır.'
    }).then((result) => {
  if (result.isConfirmed) {
    window.location.href = '/uptime-add';
